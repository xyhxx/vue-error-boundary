{
  "name": "veboundary",
  "description": "Simple and convenient Vue error boundary.",
  "version": "2.0.0",
  "scripts": {
    "build:ts": "vue-tsc --noEmit",
    "build:umd": "vite build --mode umd",
    "build:es": "vite build --mode es",
    "build": "pnpm build:ts && pnpm build:umd && pnpm build:es",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:2": "vue-demi-switch 2 vue2 && vitest",
    "test:3": "vue-demi-switch 3 && vitest"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "vue",
    "vue3",
    "error-boundary",
    "vue-error-boundary"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xyhxx/vue-error-boundary.git"
  },
  "author": "xyhxx(603331487@qq.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xyhxx/vue-error-boundary/issues"
  },
  "homepage": "https://github.com/xyhxx/vue-error-boundary#readme",
  "devDependencies": {
    "@types/node": "^20.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/coverage-c8": "^0.31.0",
    "@vue/test-utils": "^2.3.2",
    "axios": "^1.4.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-proste": "^5.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-vue": "^9.12.0",
    "jsdom": "^22.0.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vite-plugin-dts": "^2.3.0",
    "vitest": "^0.31.0",
    "vue": "^3.3.2",
    "vue-eslint-parser": "^9.2.1",
    "vue-tsc": "^1.6.4",
    "vue2": "npm:vue@2"
  },
  "peerDependencies": {
    "@vue/composition-api": ">=1.0.0",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "dependencies": {
    "@vue/devtools-api": "^6.5.0",
    "vue-demi": "0.14.1"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  }
}
