{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "baseUrl": "./src",
    "paths": {
      "@src": ["./index"],
      "@components": ["./components/index"],
      "@utils": ["./utils/index"]
    }
  },
  "include": ["src", "__tests__", "vite.config.ts", "__mocks__"]
}
